<div class="text-center">
  <h1>新規投稿する</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :summary, '題名' %>
        <%= f.text_field :summary, class: 'form-control input-lg' %>
      </div>
      
      <div class="field">
        <%= f.label :image, '画像' %>
        <%= f.file_field :image %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_area :content, class: 'form-control', rows: 10 %>
      </div>
      
      <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
