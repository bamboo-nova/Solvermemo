<% if logged_in? %>
  <div id="sidebar">
      <div class="banner">
        <a class="twitter-timeline" data-lang="ja" data-width="300" data-height="300" data-theme="light" data-link-color="#2B7BB9" href="https://twitter.com/BambooNova?ref_src=twsrc%5Etfw">Tweets by BambooNova</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
  </div>
  
  <h1>投稿一覧</h1>
  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#post">
          投稿を表示する
  </button>
  <div id="post" class="collapse">
    <%= render 'posts/posts', {posts: @posts, comments: @comments, comment: @comment} %>
  </div>
  <h1>コード一覧</h1>
  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#code">
          コードを表示する
  </button>
  <div id="code" class="collapse">
    <%= render 'codes/codes', codes: @codes %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to solvermemo</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
