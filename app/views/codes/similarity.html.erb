<div class="text-center">
  <h2>似たプログラムコードを探す</h2>
</div>
<div class="similarity">
  <div class="row">
    <div class="text-center">
      <%= form_tag(similarity_codes_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <div class="code">
            <%= text_area_tag :program, @program, class: 'form-control', placeholder: 'プログラムを入力', size: "60x20"  %>
          </div>
        </div>
        <div>
        <%= submit_tag '類似したプログラムを検索', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<ul>
  <% if @results.present? %>
    <% @codes.zip(@results) do |code, result| %>
    <li class="similar">
      <p><%= link_to code.user.name, codes_user_path(code.user) %></p>
      <p>題名:<%= code.summary %></p>
      <p>類似度:<%= result %></p>
    </li>
    <% end %>
  <% end %>
</ul>
